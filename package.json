  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "npx tailwindcss --minify -i ./src/css/apollon.css -o ./public/style.css",
    "build-js": "npx rollup --config",
    "dev": "live-server --host=nsix.test --port=2901 public",
    "rollup": "npx rollup --config --watch",
    "tailwind": "npx tailwindcss -i ./src/css/apollon.css -o ./public/style.css --watch",
    "start": "run-p --print-label tailwind rollup dev"
  }
